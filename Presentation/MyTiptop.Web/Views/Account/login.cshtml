@model MyTiptop.Web.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>用户登录</title>
    <link rel="icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" type="image/x-icon" />
    <link href="@Url.Content("~/Content/base.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/account.css")" rel="stylesheet" type="text/css" />
    @*<script src="../scripts/jquery-3.1.1.min.js" type="text/javascript"></script>*@
    <script type="text/javascript" src="@Url.Content("~/admin_mall/scripts/jquery.js")"></script>
    <script src="@Url.Content("~/scripts/account.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/admin_mall/scripts/tabhelp.js")"></script>

</head>
<body>
    <div id="loginTop" class="box">
        <a href="@Url.Content("~/home/default")" class="left"><img src="@Url.Content("~/admin_mall/images/grand.png")"  height="42" /></a>
        <h2>欢迎登录</h2>
        <div class="clear"></div>
    </div>
    <div class="box login">
        @*<a href="@Url.Action("register")" class="loginREG">注    册</a>*@
        <img src='@Url.Content("~/images/")@{@Model.Random}.jpg' width="461" height="355" class="left" />
        <div class="right">
        <form name="loginForm" action="@Url.Content("~/Account/Login")">
            <dl>
                <dt>用户名/工号</dt>
                <dd><input type="text" name="shadowName" class="userName text" value="" /></dd>
            </dl>
            <dl>
                <dt>密码</dt>
                <dd><input type="password" name="password" class="passWord text" value="" /></dd>
            </dl>
            @if (Model.IsVerifyCode)
            {
                <dl>
                    <dt>验证码</dt>
                    <dd><input type="text" name="verifyCode" autocomplete="off" class="YZM text left" /><img id="verifyImage" style="cursor:hand" title="点击刷新验证码" onclick="this.src = '@Url.Content("~/")tool/verifyimage?time=' + new Date()" src="@Url.Content("~/")tool/verifyimage" height="34" class="left" /><div class="clear"></div></dd>
                </dl>
            }
            <div class="loginBt">
                @*<a href="@Url.Action("findpwd")">忘记密码?</a>redBT loginIn*@
                <a href="#" class="redBT loginIn" onclick="login()">登 &nbsp; 陆</a>
            </div>
            <div class="openID">
                <h4></h4>
            </div>
        </form>

        </div>
        <div class="clear"></div>
    </div>

</body>
</html>
