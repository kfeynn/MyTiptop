        $(function () {
        //提交表单（ajax），保存完表单后，js提交图片上传。
            $("#tj").click(function () {

                alert($('#user').val());
                $.ajax({
                    dataType: "json",
                    type: 'post',
                    url: '@Url.Content("~/Security/Complaintajax")',
                    data: {
                        "user": $('#user').val(),
                        "code": $('#code').val()
                    },
                    async: false, //是否异步
                    success: function (data, status) {
                        if (data.content == "1") {

                            //fishId = data.content;
