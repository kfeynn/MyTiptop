                            formdata = {
                                "fishId": data.content
                            }

                            alert("提交保存图片");
                            //提交保存图片
                            $('#txt_file').fileinput('upload'); //触发插件开始上传。
                        }
                    },
                    error: function (data, status) {
                        alert('ajax checkingAjax Error');
                    }
                });

            });
        });

