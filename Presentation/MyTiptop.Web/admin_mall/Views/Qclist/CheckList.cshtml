    <script type="text/javascript">


        //删除检查项目
        function DeleteRow(r,qcz01,qcz05)
        {
            if(confirm("您确认删除吗？"))
            {
                //1.js后台删除 qcz 
                //2.后台成功后，前台删除对应的tr

                //返回false 则不允许调用保存按钮 data.content
                $.ajax({
                    dataType: "json",
                    type: 'post',
                    url: '@Url.Content("~/malladmin/qclist/deleteRowAjax")',
                    data: {
                        qcz01: qcz01,
                        qcz05: qcz05  
                    },
                    async: true, //是否异步
                    success: function (data, status) {
                        if (data.content == "1") {
                            //2.后台成功后，前台删除对应的tr
                            var i = r.parentNode.parentNode.parentNode.rowIndex;
                            document.getElementById('simple-table').deleteRow(i);
                        }
                        if (data.content == "2")
                        {
                            alert("已经审核,不能修改");
                        }
                    },
                    error: function (data, status) {
                        alert('ajax DeleteRow Error');
                    }
                });
            }
        }

        $(function () {
            //表单提交操作
            function doPostBack(action) {
                var from = $("form:first");
                if (action != "") {
                    from.prop("action", action);
                }
                from.get(0).submit();
            };
            //确定提交
            $("#btnEnter").click(function () {
                //验证是否PN有值
                if ($("#txtqcy01").val() != "") {
                    //参数赋值
                    $("#_state").val("reload");
                    //提交
                    doPostBack("");
                    return false;
                }
                else {
                    alert("不要乱点");
                }
            });

            //查询
            $("#btnQuery").click(function () {

                var qcy01 = $("#txtqcy01").val();
                //验证是否PN有值
                if (qcy01 != "") {
                    //参数赋值
                    $("#_state").val("query");
                    //提交
                    doPostBack("");
                    return false;
                }
                else {
                    alert("请输入PN查询");
                }
            });



        });



    </script>
