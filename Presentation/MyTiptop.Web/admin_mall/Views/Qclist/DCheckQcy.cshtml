    <link href="@Url.Content("~/admin_mall/css/_share.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="@Url.Content("~/components/my97datepicker/WdatePicker.js")"></script>

    <!--------------------------------------------- basic scripts -------------------------------------------->
