<body> 

    @using (Html.BeginForm("qcylist2", "qclist", FormMethod.Post, new { id = "form1", name = "form1", @class = "form-horizontal" }))
    {
        <fieldset>
            <div class="page-header"><h1>@Model.qcy.TC_QCY01 QC Inspection Check List</h1><input type="hidden" id="_state" name="_state" value="add" /></div>

            <div class="form-group">
                <label for="txtqcy01" class="col-sm-2 control-label">P/N：</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="txtqcy01" name="TC_QCY01" placeholder="P/N" value="@Model.qcy.TC_QCY01">
                </div>
                <label for="txtqcy02" class="col-sm-2 control-label">产品名称：</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="txtqcy02" name="TC_QCY02" placeholder="产品名称" value="@Model.qcy.TC_QCY02">
                </div>
            </div>
            <div class="form-group">
                <label for="txtqcy03" class="col-sm-2 control-label">客户：</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="txtqcy03"  name="TC_QCY03"  placeholder="客户" value="@Model.qcy.TC_QCY03">
                </div>
                <label for="txtqcy04" class="col-sm-2 control-label">模组编号:</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="txtqcy04"  name="TC_QCY04"  placeholder="模组编号"  value="@Model.qcy.TC_QCY04">
                </div>
                <label for="txtqcy05" class="col-sm-2 control-label">出货目的地:</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="txtqcy05"  name="TC_QCY05"  placeholder="出货目的地"  value="@Model.qcy.TC_QCY05">
                </div>
            </div>
            <div class="form-group">
                <label for="txtqcy06" class="col-sm-2 control-label">马达序列号：</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="txtqcy06"  name="TC_QCY06"  placeholder="马达序列号"  value="@Model.qcy.TC_QCY06">
                </div>
                <label for="txtqcy07" class="col-sm-2 control-label">马达零件号:</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="txtqcy07"  name="TC_QCY07"  placeholder="马达零件号"  value="@Model.qcy.TC_QCY07">
                </div>
                <label for="txtqcy08" class="col-sm-2 control-label">马达生产日期：</label>
                <div class="col-sm-2">
                    <div class="input-group">
                        @*@if (Model.qcy.TC_QCY08 == null)
                        {
                            <input type="text" class="form-control" id="txtqcy08" name="TC_QCY08" placeholder="马达生产日期" value="" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd'})">
                        }
                        else
                        {
                           <input type="text" class="form-control" id="txtqcy08"  name="TC_QCY08"  placeholder="马达生产日期"  value="@Convert.ToDateTime(@Model.qcy.TC_QCY08).ToString("yyyy-MM-dd")" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd'})">
                        }
                        <span class="input-group-addon"> <i class="fa fa-calendar bigger-110"></i></span>*@
                        <input type="text" class="form-control" id="txtqcy17" name="TC_QCY17" placeholder="马达生产日期" value="@Model.qcy.TC_QCY17">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-6 col-sm-4">
                    <button type="button" class="btn btn-default" id="btnQuery">查询</button>
                   
                </div>

                <div class="col-sm-2 btn-warning">
                   @Model.message
                </div>
            </div>
       </fieldset>

        <!--分割线-->
        @*<div class="divider"></div>*@

        <!--table-->

        <div class="row">
            <div class="col-xs-12">
                <table id="simple-table" class="table  table-bordered table-hover">
                    <thead>
                        <tr> 
                            <th class="detail-col">Details</th>
                            <th>PN</th>
                            <th>产品名称</th>
                            <th class="hidden-480">客户</th>
                            <th class="hidden-480">模组编号</th>
                            <th class="hidden-480">出货目的地</th>
                            <th>状态</th>
                            <th></th>
                        </tr> 
                    </thead>
                    <tbody> 
                        @foreach (MyTiptop.OraCore.TC_QCY_FILE row in Model.qcylist)
                        { 
                            <!--父节点-->
                            <tr> 
                                <td class="center">
                                    <div class="action-buttons">
                                        <a href="#" class="green bigger-140 show-details-btn" title="Show Details">
                                            <i class="ace-icon fa fa-angle-double-down"></i>
                                            <span class="sr-only">Details</span>
                                        </a>
                                    </div>
                                </td>
                                <td> 
                                    <div class="action-buttons">
                                        @*window.open('@Url.Content("~/Home/Index?File=")'+data+'')*@
                                        <strong><a href='@Url.Content("~/malladmin/qclist/DChecklist?TC_QCY01=")@row.TC_QCY01'>@row.TC_QCY01</a></strong>
                                    </div>
                                </td>
                                <td>@row.TC_QCY02</td>
                                <td  class="hidden-480">@row.TC_QCY03</td>
                                <td  class="hidden-480">@row.TC_QCY04</td>
                                <td  class="hidden-480">@row.TC_QCY05</td>
                                <td>
                                    @if (row.TC_QCY12 == 2)
                                    {
                                        <img  src="@Url.Content("~/images/checked-sm.png")" alt="核" class="img-circle">
                                    }
                                    else if (row.TC_QCY12 == 1)
                                    {
                                        <span>检验中</span>
                                    }
                                    else
                                    {
                                        <span>开立</span>
                                    }
                                </td>
                               
                                <td>
                                   
                                </td>

                            </tr>

                            <!--明细-->
                            <tr class="detail-row">
                                <td colspan="8">
                                    <div class="table-detail">
                                        <div class="row">
                                            <div class="col-xs-12 col-sm-2">
                                                <div class="text-center">
                                                    @if (row.TC_QCY12 == 2)
                                                    {
                                                        <img height="150" src="@Url.Content("~/images/checked-xs.png")" alt="核" class="img-thumbnail">
                                                    }
                                                    else
                                                    {
                                                        @*<img height="150" class="thumbnail inline no-margin-bottom" alt="Domain Owner's Avatar" src="holder.js/180x200" />*@
                                                        <img height="150" class="thumbnail inline no-margin-bottom" alt="Domain Owner's Avatar" src="@Url.Content("~/Content/assets/images/avatars/profile-pic.jpg")" />
                                                    }
                                                    @*src="@Url.Content("~/Content/assets/images/avatars/profile-pic.jpg")"*@
                                                    <br />
                                                    
                                                    <div class="width-80 label label-info label-xlg arrowed-in arrowed-in-right">
                                                        <div class="inline position-relative">
                                                            <a class="user-title-label" href="#">
                                                                <i class="ace-icon fa fa-circle light-green"></i>
                                                                
                                                                <span class="white">@row.TC_QCY01</span>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-sm-7">
                                                <div class="space visible-xs"></div>

                                                <div class="profile-user-info profile-user-info-striped">
                                                    <div class="profile-info-row">
                                                        <div class="profile-info-name"> 马达序列号 </div>

                                                        <div class="profile-info-value">
                                                            <span>@row.TC_QCY06</span>
                                                        </div>
                                                    </div>

                                                    <div class="profile-info-row">
                                                        <div class="profile-info-name"> 马达零件号 </div>

                                                        <div class="profile-info-value">
                                                            <i class="fa fa-map-marker light-orange bigger-110"></i>
                                                            <span>@row.TC_QCY07</span>
                                                        </div>
                                                    </div>

                                                    <div class="profile-info-row">
                                                        <div class="profile-info-name"> 马达生产日期 </div>

                                                        <div class="profile-info-value">
                                                            <span>@row.TC_QCY17</span>
                                                        </div>
                                                    </div>

                                                    <div class="profile-info-row">
                                                        <div class="profile-info-name"> 录入人员 </div>

                                                        <div class="profile-info-value">
                                                            <span>@row.TC_QCY11</span>
                                                        </div>
                                                    </div>

                                                    <div class="profile-info-row">
                                                        <div class="profile-info-name"> 录入时间 </div>

                                                        <div class="profile-info-value">
                                                            <span>@row.TC_QCY10</span>
                                                        </div>
                                                    </div>

                                                    <div class="profile-info-row">
                                                        <div class="profile-info-name"> 审核人员 </div>

                                                        <div class="profile-info-value">
                                                            <span>@row.TC_QCY13</span>
                                                        </div>
                                                    </div>

                                                    <div class="profile-info-row">
                                                        <div class="profile-info-name"> 审核时间 </div>

                                                        <div class="profile-info-value">
                                                            <span>@row.TC_QCY14</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-sm-3">
                                                <div class="space visible-xs"></div>
                                                <h4 class="header blue lighter less-margin">Send a message to Alex</h4>

                                                <div class="space-6"></div>

                                                <form>
                                                    <fieldset>
                                                        <textarea class="width-100" resize="none" placeholder="Type something…"></textarea>
                                                    </fieldset>

                                                    <div class="hr hr-dotted"></div>

                                                    <div class="clearfix">
                                    
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
                @*页脚*@
                @Html.BootstrapPager(Model.PageModel)
            </div><!-- /.span -->
        </div><!-- /.row -->

       

      
    }
</body>
</html>

<script type="text/javascript">
    $(function () {
        /************  显示/隐藏 区域  ***/
        $('.show-details-btn').on('click', function (e) {
            e.preventDefault();
            //$(this).closest('tr').next().toggleClass('open');
            $(this).closest('tr').next().fadeToggle("slow");
            $(this).find(ace.vars['.icon']).toggleClass('fa-angle-double-down').toggleClass('fa-angle-double-up');
            $(this).closest('tr').next().css('visibility', 'visible');

            //重新计算父框架高度
            initIFrameHeight();
        });
      
        /***************/
        //载入时隐藏审批列表
        $(".detail-row").hide();

        //重新计算父框架高度
        initIFrameHeight();

    });

</script>


