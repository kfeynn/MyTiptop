</head>

<body>

    <h1 class="rightH1">
        用户管理 &gt;&gt; 添加用户
        <div class="right">
            
            <a href="@ViewBag.referer" class="menuBT"><img src="../../admin_mall/images/goback.jpg" />返回列表</a>

            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </h1>
    <ul class="addTag">
        <li class="hot"><a href="javascript:;">基本信息</a></li>
        <li><a href="javascript:;">扩展信息</a></li>

        <div class="clear"></div>
    </ul>
    @using (Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="86px" align="right">连续添加：</td>
                    <td>@Html.CheckBoxFor(x => Model.AddFlag)</td>
                </tr>
                <tr>
                    <td width="86px" align="right">角色名：</td>
                    <td>@Html.TextBoxFor(x => Model.Role.RoleName, new { @class = "input", required=true,minLength=4 , size = "35" }) @Html.ValidationMessageFor(x => Model.Role.RoleName) </td>
                </tr>
                <tr>
                    <td align="right">角色描述：</td>
                    <td>@Html.TextBoxFor(x => Model.Role.RoleDes, new { @class = "input", size = "35"  } )</td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>
                        <a href="" class="addBt" id="sumbitBut1"><img src="../../admin_mall/images/submit.jpg" /></a>
                        <label id="lblMessage"></label> @Model.Message <!-- 有提示信息就显示 -->
                    </td>
                </tr>
                <tr>
                    <td align="right">&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
    }

@Html.Partial("_footer")


    <!-- iframe 高度设置 -->
    <script type="text/javascript" src="@Url.Content("~/admin_mall/scripts/home/iframe.js")"></script>

</body>

</html>

